<h1>Your Cart</h1>

 <% if session[:cart] %>
     <ul>
     <% session[:cart].each do |item| %>
         <li>
             <%= item %>
         </li>
     <% end %>
     </ul>
 <% end %>

 <h2>Add new item</h2>
 <%= form_tag(products_add_path, method: :post) do %>
     <%= text_field_tag :product %>
     <%= submit_tag "add to cart" %>
 <% end %>
