<h1>Your Cart and Products</h1>

<ul>
  <% cart.each do |item| %>
    <li><%= item %></li>
  <% end %>
</ul>

<br>

<h3>Add item to cart below</h3>

<br>

<%= form_tag ( {controller: 'products', action: 'add', method: 'post'} ) do %>
    <%= label_tag :product, 'Add item' %>
    <%= text_field_tag :product %>
    <%= submit_tag 'add to cart' %>
<% end %>