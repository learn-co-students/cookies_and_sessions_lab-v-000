<h2>Your cart contains the following products:</h2>
<ul>
    <%= cart.each do |product| %>
      <li><%= product %></li>
    <% end %>
  </ul>
  
  
  <%= form_tag({controller: "products", action: "add", method: "post"}) %>
  <input type="text" name="product" />
  <input type="submit" value="add to cart" />