<h1>Products Page</h1>
<h3>Your cart:</h3>
<ul>
  <% @cart.each do |item| %>
    <div>
      <li><%= item %></li>
    </div>
  <% end %>
</ul>

<h3>Add product to cart:</h3>
<%= form_tag products_path do %>
  <%= label_tag :product %>
  <%= text_field_tag :product %>
  <%= submit_tag "add to cart" %>
<% end %>
