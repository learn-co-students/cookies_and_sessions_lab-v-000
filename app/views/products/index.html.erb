<h1>Your cart:</h1>

<% if cart.empty?%>
  <p>There is nothing in yuor cart, want to add an item?</p>
  <%= form_tag do %>
    <%= text_field_tag 'product' %>
    <%= submit_tag 'add to cart' %>
  <% end %>
<% else %>
  <ul>
    <%= cart.each do |product| %>
      <li><%= product %></li>
    <% end %>
  </ul>
<% end %>
