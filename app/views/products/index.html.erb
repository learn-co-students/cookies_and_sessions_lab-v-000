<% if cart.empty? %>
  <h1>Your cart is empty.</h1>
<% else %>
  <h1>Your cart has the following items:</h1>
  <ul>
    <% cart.each do |item| %>
      <li><%= item %></li>
    <% end %>
  </ul>
<% end %>

<h2>Add a new product to your cart here:</h2>
<%= form_tag add_product_path do %>
  <%= label_tag :product %>
  <%= text_field_tag :product %>

  <%= submit_tag "add to cart" %>
<% end %>