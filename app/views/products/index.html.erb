<h1>Product Index Page</h1>
<h3>Current cart:</h3>
<ul>
  <% cart.each do |item| %>
    <li> <%= item %> </li>
  <% end %>
</ul>
<h3>Add an Item</h3>
<%= form_tag({controller: 'products', action: 'add', method: 'post'}) do %>
  <input type="text" name="product">
  <input type="submit" value="add to cart" id="add to cart">
<% end %>
