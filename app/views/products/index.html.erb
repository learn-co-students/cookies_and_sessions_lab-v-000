<h1>List of Products</h1>

<ul>
<% cart.each do |product| %>
  <li><%= product %></li>
<% end %>
</ul>
<br>

<h1>Add Product to Cart</h1>

<%= form_tag("/") do %>
    <label_for="product"> Product: </label>
    <input type="text" id="product" name="product"/>
  <br />

  <%= submit_tag "add to cart" %>
<% end %>
<br>
