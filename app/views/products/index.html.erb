<h1>Amazon Dot Com</h1>
<h3>Here is your cart:</h3>

  <% session[:cart].each do |item| %>
    <li><%= item %></li>
  <% end %>

<form action="/" method="post">
  <label for="">Product to Add:</label>
  <input type="text" name="product" id="product">

  <input type="submit" name="add to cart" id="add to cart" value="Add to Cart">
</form>
