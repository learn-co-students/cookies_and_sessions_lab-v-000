<h4>Items in your shopping cart</h4>
<ul>
  <% @cart.each do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>

<h4>Add another item to your shopping cart</h4>

<%= form_tag("/add", method: "POST") do %>
  <%= label_tag 'product' %>
  <%= text_field_tag 'product' %>
  <%= submit_tag 'add to cart' %>
<% end %>
