<h1>Add An Item To Your Cart</h1>
<%= form_tag("/products", method: "post") do %>
<%= label_tag(:product, "New Item:") %>
  <%= text_field_tag(:product) %>

  <%= submit_tag("add to cart") %>
<% end %>

<h1>Your Cart Contains</h1>
<ul>
	<% cart.each do |item| %>
		<li><%= "#{item}" %></li>	
	<% end %>
</ul>
