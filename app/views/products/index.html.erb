<% if !@cart.empty? %>
  <h1>Items In Cart:</h1>
  <ul>
    <% @cart.each do |item| %>
      <li> <%= item %> </li>
    <% end %>
  </ul>
<% end %>


<h1>Add Item To Cart:</h1>
<%= form_tag('/', method: 'post') do %>
  <label for="product">Name:</label>
  <%= text_field_tag(:product) %>
  <%= submit_tag('add to cart') %>
<% end %>
