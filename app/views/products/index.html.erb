<h1>Products</h1>
<h2>Your Cart:</h2>
  <ul>
  <% if @cart %>
    <% @cart.each do |item| %>
      <li><%= item %></li>
      <% end %>
  <% else %>
    <li>Your cart is empty!</li>
  <% end %>
  </ul>

  <br>

<h3>Add a new item to your cart:</h3>
  <%= form_tag method: 'post' do%>
    <%= label_tag :product %>
    <%= text_field_tag :product %>
    <button name="button" type="submit">add to cart</button>
  <% end %>
