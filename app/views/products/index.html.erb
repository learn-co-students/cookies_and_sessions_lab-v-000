<h1>Your Cart</h1>

<ul>
  <% cart.each do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>

<%= form_tag products_add_path do %>
  <div>
    <%= text_field_tag 'product', nil, placeholder: 'Add a product...' %><br />
  </div>

  <br />

  <div>
    <%= submit_tag 'add to cart'%>
  </div>
<% end %>
