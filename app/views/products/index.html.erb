<h1>Shopping Cart</h1>

<% if session[:cart] %>
  <ul>
    <% session[:cart].each do |product| %>
      <li><%= product %></li>
    <% end %>
  </ul>
<% end %>

<br>

<h3>Add a Product to Your Cart</h3>
<%= form_tag("/") do %>
  Product: <%= text_field_tag "product" %><br><br>
  <%= submit_tag "add to cart" %>
<% end %>
