<%= form_tag("/add") do %>
  <%= label_tag('product', "Product:") %>
  <%= text_field_tag('product') %>

  <%= submit_tag "add to cart" %>
<% end %>

<br>

Cart:
<% shopping = cart %>
<% if shopping %>
  <ul>
    <% shopping.each do |item| %>
      <li><%= item %></li>
    <% end %>
  </ul>
<% end %>
