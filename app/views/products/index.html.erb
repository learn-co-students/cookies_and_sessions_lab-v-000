<h1>Add to your cart</h1>

<%= form_tag('/add', method: 'post') do %>
  <%= label_tag :product, "Enter the name of the product you want" %><br>
  <%= text_field_tag :product %><br>

  <%= submit_tag "add to cart" %>
<% end %>

<h2>Your Cart</h2>
<ul>
  <% session[:cart].each do |i| %>
    <li><%= i %></li>
  <% end %>
</ul>
